{% extends 'base.html.twig' %}

{% block body %}
    <div class="ticket_form_wrapper">
        <div class="ticket_form_title text-center mb-4">
            <h3>Create ticket</h3>
        </div>
        {{ form(ticketForm) }}
        {% if message is defined and message != '' %}
            <div class="alert alert-success text-center">
                {{ message }}
            </div>
            <a href="/tickets" class="ticket btn btn-primary mt-5 d-block">Go to tickets</a>
        {% endif %}
    </div>
{% endblock %}