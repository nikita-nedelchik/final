{% extends 'base.html.twig' %}
{% block body %}
    <div class="container rounded bg-white mt-5 mb-5">
        <div class="row">
            <div class="col-md-3 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    <img class="rounded-circle" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
                    <span class="font-weight-bold">{{ user.username }}</span>
                    <span class="text-black-50">{{ user.email }}</span>
                    {% if isAdmin %}
                        <a href="/admin" class="btn btn-primary mt-5">Go to admin part</a>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-7 border-right">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Profile information</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6">
                            <label class="labels" for="first_name">First Name</label>
                            <input type="text" id="first_name" class="form-control mt-2" value="{{ user.firstName }}" readonly>
                        </div>
                        <div class="col-md-6">
                            <label class="labels" for="second_name">Second Name</label>
                            <input type="text" id="second_name" class="form-control mt-2" value="{{ user.lastName }}" readonly>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <label class="labels" for="email">Email</label>
                            <input type="text" id="email" class="form-control mt-2" readonly value="{{ user.email }}">
                        </div>
                    </div>
                </div>
                <div class="d-flex flex-column">
                    <div class="p-3">
                        <div class="d-flex justify-content-between align-items-center experience">
                            <h4>Tickets</h4>
                        </div>
                    </div>
                    <div class="row p-3 justify-content-around">
                        <div class="resolved col">
                            <a href="/profile/tickets/resolved" class="btn btn-outline-success btn-sm">
                                Resolved tickets
                                <span class="badge bg-gradient badge-dark">4</span>
                            </a>
                        </div>
                        <div class="unresolved col">
                            <a href="/profile/tickets/unresolved" class="btn btn-outline-danger btn-sm">
                                Unresolved tickets
                                <span class="badge badge-dark">4</span>
                            </a>
                        </div>
                        <div class="frozen col">
                            <a href="/profile/tickets/frozen" class="btn btn-outline-info btn-sm">
                                Frozen tickets
                                <span class="badge badge-dark">4</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
            </div>
        </div>
    </div>
{% endblock %}